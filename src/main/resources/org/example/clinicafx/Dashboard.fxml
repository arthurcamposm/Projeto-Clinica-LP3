<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clinicafx.controller.DashboardController">
    <top>
        <MenuBar prefHeight="35.0" prefWidth="800.0" style="-fx-background-color: #24243e;" stylesheets="@styles.css" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Cadastros">
                    <items>
                        <MenuItem fx:id="menuItemCadPaciente" mnemonicParsing="false" onAction="#handleMenuCadastrarPaciente" text="Paciente" />
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuCadastrarMedico" text="Médico" />
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuCadastrarPlano" text="Plano de Saúde" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Agendamento">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuAgendarConsulta" text="Agendar Consulta" />
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuVisualizarAgenda" text="Visualizar Agenda" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleMenuSobre" text="Sobre" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #F0F2F5;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="46.0" layoutY="35.0" text="Visão Geral do Sistema" textFill="#444444">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <AnchorPane layoutX="46.0" layoutY="90.0" prefHeight="120.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Total Pacientes" textFill="#666666">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblTotalPacientes" layoutX="14.0" layoutY="45.0" text="0" textFill="#0078d7">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <AnchorPane layoutX="270.0" layoutY="90.0" prefHeight="120.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Total Médicos" textFill="#666666">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblTotalMedicos" layoutX="14.0" layoutY="45.0" text="0" textFill="#28a745">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <AnchorPane layoutX="494.0" layoutY="90.0" prefHeight="120.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Consultas Marcadas" textFill="#666666">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblTotalConsultas" layoutX="14.0" layoutY="45.0" text="0" textFill="#dc3545">
                            <font>
                                <Font name="System Bold" size="48.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <Button layoutX="46.0" layoutY="240.0" mnemonicParsing="false" onAction="#atualizarDashboard" text="Atualizar Dados" />

            </children>
        </AnchorPane>
    </center>

</BorderPane>
