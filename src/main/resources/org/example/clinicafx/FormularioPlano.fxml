<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clinicafx.controller.FormularioPlanoController">
    <children>
        <Label layoutX="36.0" layoutY="32.0" text="Cadastro de Plano de Saúde">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label layoutX="36.0" layoutY="85.0" text="Nome do Plano:" />
        <TextField fx:id="txtNomePlano" layoutX="36.0" layoutY="105.0" prefHeight="25.0" prefWidth="328.0" promptText="Ex: Básico Enfermaria, Executivo Ouro..." />

        <Label layoutX="36.0" layoutY="145.0" text="Nome da Operadora:" />
        <TextField fx:id="txtOperadora" layoutX="36.0" layoutY="165.0" prefHeight="25.0" prefWidth="328.0" promptText="Ex: Unimed, Bradesco, Amil..." />

        <Button layoutX="264.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleSalvar" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Salvar">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>

        <Button fx:id="btnCancelar" layoutX="153.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleCancelar" prefHeight="25.0" prefWidth="100.0" text="Cancelar" />
    </children>
</AnchorPane>